              "application/json": {
                "example": {
                  "message": "Unlike success or like success"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "example": {
                  "error": "No review found for reviewId: {reviewId}"
                }
              }
            }
          }
        }
      }
    }
  }
